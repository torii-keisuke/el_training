<div class=" items-center px-5 lg:px-20">
  <div class="max-w-md p-5 mx-auto my-3 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
    <div class="text-center">
      <h1 class="mt-6 text-3xl font-extrabold text-neutral-600"><%= @task.title%>のラベル一覧</h1>
      <div class="relative my-4 w-full border-t border-gray-300"></div>
      <%= form_with model: @task, url: task_path(@task.id), method: :patch, local: true do |f| %>
        <%= f.label :name, "選択してください。", class: "block font-semibold mb-3" %>
        <%= f.collection_check_boxes(:label_ids, @labels, :id, :name) %>
        <%= f.submit "変更", class: "flex items-center justify-center w-full px-10 py-4 mt-3 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>
  </div>
</div>
