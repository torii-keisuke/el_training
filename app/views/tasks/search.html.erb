<div class=" items-center px-5 lg:px-20">
  <div class="max-w-md p-5 mx-auto my-3 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
    <div class="text-center">
      <% if current_user.present? %>
        <% if @tasks.present? %>
          <h1 class="mt-6 mb-4 text-3xl font-extrabold text-neutral-600"><%= current_user.name%>のタスク一覧</h1>

          <%= form_with model: @task, url: search_path, method: :get, local: true do |f| %>
            <%= f.select :keyword, [["新しいタスク順", "new"],
                                    ["古いタスク順", "old"],
                                    ["優先度が高い順", "priority"],
                                    ["優先度が低い順", "non_priority"]] %>
            <%= f.submit class: "px-4 py-2 ml-2 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-lime-500 rounded-xl hover:bg-lime-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <% end %>

            <div class="relative my-4 w-full border-t border-gray-300"></div>
          <% @tasks.each do |task| %>
            <div class="py-2">
              <%= link_to task.title, edit_user_task_path(current_user.id, task.id), class: "text-lg font-medium text-neutral-600 p-3" %><hr>
            </div>
          <% end %>
        <% else %>
          <h1>新規タスクを作成してください。</h1>
          <%= link_to "タスクを作成する", new_user_task_path(current_user.id), class: "text-blue-700" %>
        <% end %>
      <% else %>
        <h1><%= link_to "ログイン", new_user_session_path, class: "text-blue-700" %>してください。初めてご利用される方は、<%= link_to "新規登録", new_user_registration_path, class: "text-blue-700" %>してください。</h1>
      <% end %>
    </div>
  </div>
</div>
