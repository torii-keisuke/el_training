<div class=" items-center px-5 lg:px-20">
  <div class="max-w-md p-5 mx-auto my-3 transition duration-500 ease-in-out transform bg-white rounded-lg md:mt-0">
    <div class="text-center">
    <h1 class="mt-6 mb-7 text-3xl font-extrabold text-neutral-600">検索結果</h1>
    <%= link_to "戻る", user_tasks_path(current_user.id), class: "justify-center px-6 py-3 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <div class="mt-8 mb-3 w-full border-t border-gray-300"></div>
    <% @results.each do |task| %>
      <%= link_to task.title, edit_user_task_path(current_user.id, task.id), class: "text-lg font-medium text-neutral-600 p-3" %>
      <div class="my-2 w-full border-t border-gray-300"></div>
    <% end %>
    </div>
  </div>
</div>
